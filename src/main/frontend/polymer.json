{
  "entrypoint": "src/storefront/bakery-storefront.html",
  "shell": "src/app/bakery-app.html",
  "fragments": [
    "src/admin/bakery-admin.html",
    "src/dashboard/bakery-dashboard.html",
    "src/products/bakery-products.html",
    "src/storefront/bakery-storefront.html",
    "src/users/bakery-users.html",
    "src/404/bakery-404.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "name": "es5",
      "js": { "minify": true, "compile": true },
      "css": { "minify": true },
      "html": { "minify": true },
      "bundle": false
    },
    {
      "name": "es6",
      "js": { "minify": true, "compile": false },
      "css": { "minify": true },
      "html": { "minify": true },
      "bundle": false
    }
  ]
}
